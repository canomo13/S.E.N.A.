<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/traporojo"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <EditText
        android:id="@+id/txtNombre_del_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/TxVNombre" />

    <EditText
        android:id="@+id/txtApellido_del_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/txtNombre_del_usuario"
        android:layout_toEndOf="@+id/TxVApellido" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/txtEdad"
        android:layout_toEndOf="@+id/TxVCorreo"
        />

    <EditText
        android:id="@+id/txtEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:inputType="number"
        android:layout_below="@+id/txtApellido_del_usuario"
        android:layout_toEndOf="@+id/TxVEdad"
        />

    <EditText
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_below="@+id/txtEmail"
        android:textColor="#FFFFFF"
        android:layout_toEndOf="@+id/TxVUser" />

    <EditText
        android:id="@+id/txtPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/txtUserName"
        android:layout_toEndOf="@+id/TxVPass" />

    <Button
        android:id="@+id/boton_registro"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Registrarse"
        android:textColor="#fee99a"
        android:onClick=""
        android:layout_below="@+id/txtPass"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/TxVNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: "
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#fee99a"
        android:layout_alignBaseline="@+id/txtNombre_del_usuario"
        android:layout_alignBottom="@+id/txtNombre_del_usuario"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/TxVApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellidos: "
        android:textColor="#fee99a"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/txtApellido_del_usuario"
        android:layout_alignBottom="@+id/txtApellido_del_usuario"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edad: "
        android:textColor="#fee99a"
        android:textSize="20dp"
        android:id="@+id/TxVEdad"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/txtEdad"
        android:layout_alignBottom="@+id/txtEdad"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxVCorreo"
        android:text="Correo: "
        android:textColor="#fee99a"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/txtEmail"
        android:layout_alignBottom="@+id/txtEmail"
        android:layout_alignParentStart="true"
        />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/TxVUser"
    android:text="Nombre de Usuario: "
    android:textColor="#fee99a"
    android:textSize="20dp"
    android:textStyle="bold"
    android:layout_alignBaseline="@+id/txtUserName"
    android:layout_alignBottom="@+id/txtUserName"
    android:layout_alignParentStart="true"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxVPass"
        android:text="ContraseÃ±a: "
        android:textColor="#fee99a"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/txtPass"
        android:layout_alignBottom="@+id/txtPass"
        android:layout_alignParentStart="true"
        />


</RelativeLayout>