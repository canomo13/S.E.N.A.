<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/traporojo"
    tools:context="com.example.joselito.senaprueba.barcodereader.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/barcode_header"
        android:id="@+id/status_message"
       
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginRight="70dp"
        android:textSize="12pt"
        android:textColor="#fee99a"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/status_message"
        android:id="@+id/barcode_value"
       
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_above="@+id/auto_focus"
        android:layout_below="@+id/status_message" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auto_focus"
        android:id="@+id/auto_focus"
       
        android:textColor="#fee99a"
        android:textStyle="bold"
        android:textSize="8pt"
        android:checked="true"
        android:layout_above="@+id/use_flash"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/use_flash"
        android:textStyle="bold"
        android:id="@+id/use_flash"
        android:textColor="#fee99a"
       
        android:textSize="8pt"
        android:checked="false"
        android:layout_above="@+id/read_barcode"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="77dp"
        android:layout_alignEnd="@+id/auto_focus" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/read_barcode"
        android:textStyle="bold"
        android:id="@+id/read_barcode"
        android:textSize="20sp"
        android:textColor="#fee99a"
        style="@style/Widget.AppCompat.Button.Borderless"
        tools:ignore="RelativeOverlap"
        android:layout_above="@+id/busqueda"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/busqueda"
        android:text="@string/Buscar"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#fee99a"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
